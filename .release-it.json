{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release v${version}"
  },
  "github": {
    "release": true,
    "assets": ["dist/*.zip"]
  },
  "npm": {
    "publish": false
  },
  "use": "pkg.version",
  "scripts": {
    "afterBump": "npm run release:package && cd dist && bestzip v${version}.zip * && cd ..",
    "afterRelease": "echo Successfully released v${version}."
  }
}
